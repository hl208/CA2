<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>We Are Sneakers</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <div class="d-flex align-items-center">
        <a class="navbar-brand me-3" href="/shoes/">We Are Sneakers</a>
        <a href="/shoes/addSneakers" class="btn btn-outline-light btn-sm d-flex align-items-center gap-1 me-3">
          <i class="bi bi-plus-circle"></i> Add Sneakers
        </a>      
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
        <ul class="navbar-nav align-items-center">
          <li class="nav-item me-3">
            <% if (session && session.user) { %>
              <% if (session.user.role === 'admin') { %>
                <a href="/user/admin" class="d-flex align-items-center text-white text-decoration-none">
                  <i class="bi bi-person-circle fs-4 me-1"></i> Admin
                </a>
              <% } else { %>
                <a href="/user/userdashboard" class="d-flex align-items-center text-white text-decoration-none">
                  <i class="bi bi-person-circle fs-4 me-1"></i> <%= session.user.username %>
                </a>
              <% } %>
            <% } %>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm mt-1" href="/logout">
              <i class="bi bi-box-arrow-right"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <h1 class="mb-4 text-center">Shoe Listings</h1>

    <!-- ✅ Filter Form -->
    <div class="mb-4">
      <form action="/shoes/search" method="GET" class="d-flex flex-wrap gap-2">
        <!-- Search Input -->
        <input 
          type="text" 
          name="query" 
          class="form-control" 
          placeholder="Search by brand, model, or description" 
          value="<%= searchTerm %>"
        />

        <!-- Brand Filter -->
        <select name="brand" class="form-select" style="max-width: 150px;">
          <option value="All" <%= selectedBrand === 'All' ? 'selected' : '' %>>All Brands</option>
          <% brands.forEach(b => { %>
            <option value="<%= b.brand %>" <%= selectedBrand === b.brand ? 'selected' : '' %>>
              <%= b.brand %>
            </option>
          <% }) %>
        </select>

        <!-- Condition Filter -->
        <select name="condition" class="form-select" style="max-width: 150px;">
          <option value="All" <%= selectedCondition === 'All' ? 'selected' : '' %>>All Conditions</option>
          <option value="New" <%= selectedCondition === 'New' ? 'selected' : '' %>>New</option>
          <option value="Used" <%= selectedCondition === 'Used' ? 'selected' : '' %>>Used</option>
        </select>

        <!-- Size Filter -->
        <select name="size" class="form-select" style="max-width: 150px;">
          <option value="All" <%= selectedSize === 'All' ? 'selected' : '' %>>All Sizes</option>
          <% sizes.forEach(s => { %>
            <option value="<%= s %>" <%= selectedSize == s ? 'selected' : '' %>><%= s %></option>
          <% }) %>
        </select>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-search"></i> Search
        </button>
      </form>
    </div>

    <!-- ✅ Shoe Cards -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% shoes.forEach(shoe => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= shoe.model %></h5>
              <p class="card-text">
                Brand: <strong><%= shoe.brand %></strong><br>
                Size: <%= shoe.size %><br>
                Price: $<%= shoe.price %> <br>
                Condition: <%= shoe.condition %><br>
                Posted by: <strong><%= shoe.username %></strong><br>
                <% if (shoe.image_path) { %>
                  <img src="<%= shoe.image_path %>" class="card-img-bottom" width="40px" height="400px" alt="Shoe Image" />
                <% } %>
              </p>
              <a href="/shoes/viewSneaker/<%= shoe.id %>" class="btn btn-primary">View Details</a>

              <% if (session && session.user && session.user.id === shoe.user_id) { %>
                <a href="/shoes/editSneaker/<%= shoe.id %>" class="btn btn-warning ms-2">Edit</a>
              <% } %>
              <% if (session && session.user) { %>
                <% if (session.user.role === 'admin' || session.user.id === shoe.user_id) { %>
                  <form action="/shoes/deleteSneaker/<%= shoe.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger ms-2"
                      onclick="return confirm('Are you sure you want to delete this sneaker?');">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                <% } %>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
