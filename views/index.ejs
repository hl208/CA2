<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>We Are Sneakers</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">We Are Sneakers</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/shoes/addSneakers">Add new Sneaker</a>
            </li>

            <% if (!session || !session.user) { %>
              <!-- Show Register and Login if user not logged in -->
              <li class="nav-item">
                <a class="nav-link" href="/user/register">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/user/login">Login</a>
              </li>
            <% } else { %>
              <!-- Show Logout if logged in -->
              <li class="nav-item">
                <a class="nav-link" href="/user/logout">Logout</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

  <div class="container py-5">
    <h1 class="mb-4 text-center">Shoe Listings</h1>

    <% if (shoes.length === 0) { %>
      <div class="alert alert-info text-center">
        No shoes found.
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% shoes.forEach(shoe => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= shoe.model %></h5>
                <p class="card-text">
                  Brand: <strong><%= shoe.brand %></strong><br>
                  Size: <%= shoe.size %><br>
                  Price: $<%= shoe.price %>
                  <% if (shoe.image_path) { %>
                    <img src="<%= shoe.image_path %>" class="card-img-bottom" width="40px" height="400px" alt="Shoe Image" />
                  <% } %>
                </p>
                <a href="/shoes/viewSneaker/<%= shoe.id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>
