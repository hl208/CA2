<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <title>User Dashboard - We Are Sneakers</title>
</head>
<body class="bg-light">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/shoes">We Are Sneakers</a>
    <div class="d-flex align-items-center text-white">
      <ul class="navbar-nav align-items-center">
        <% if (session && session.user) { %>
          <li class="nav-item me-3">
            <% if (session.user.role === 'admin') { %>
              <a href="/user/admin" class="d-flex align-items-center text-white text-decoration-none">
                <i class="bi bi-person-circle fs-4 me-1"></i> Admin
              </a>
            <% } else { %>
              <a href="/user/userdashboard" class="d-flex align-items-center text-white text-decoration-none">
                <i class="bi bi-person-circle fs-4 me-1"></i> <%= session.user.username %>
              </a>
            <% } %>
          </li>
        <% } %>
        <li class="nav-item">
          <a class="btn btn-outline-light btn-sm mt-1" href="/logout">
            <i class="bi bi-box-arrow-right"></i> Logout
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Main Container -->
<div class="container py-5">
  <h1 class="mb-4 text-center">Welcome, <%= user.username %>!</h1>
  <p class="text-center mb-5">Here is a summary of your sneaker posts by brand:</p>

  <!-- Brand Chart -->
  <div class="row mb-5">
    <div class="col-md-8 mx-auto text-center">
      <h3>Sneakers by Brand</h3>
      <canvas id="brandChart" height="300"></canvas>
    </div>
  </div>

  <!-- Upload History -->
  <h3 class="mb-4 text-center">Your Upload History</h3>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% if (uploadHistory && uploadHistory.length > 0) { %>
      <% uploadHistory.forEach(shoe => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="<%= shoe.image_path || '/images/default-shoe.jpg' %>" class="card-img-top" style="height: 250px; object-fit: cover;">
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title"><%= shoe.model %></h5>
                <p class="card-text mb-0">Brand: <%= shoe.brand %></p>
                <p class="card-text mb-0">Price: $<%= shoe.price %></p>
                <small class="text-muted">Uploaded on: <%= new Date(shoe.created_at).toLocaleDateString() %></small>
              </div>
              <!-- Action Buttons -->
              <div class="mt-3 d-flex justify-content-between">
                <a href="/shoes/viewSneaker/<%= shoe.id %>" class="btn btn-outline-primary btn-sm">
                  <i class="bi bi-eye"></i> View
                </a>
                <a href="/shoes/editSneaker/<%= shoe.id %>" class="btn btn-outline-warning btn-sm">
                  <i class="bi bi-pencil-square"></i> Edit
                </a>
                <form action="/shoes/deleteSneaker/<%= shoe.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this sneaker?');">
                  <button type="submit" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col text-center">
        <p class="text-muted">You haven't uploaded any sneakers yet.</p>
      </div>
    <% } %>
  </div>

  <div class="text-center">
    <a href="/shoes" class="btn btn-primary mt-4">Back to Listings</a>
  </div>
</div>

<!-- Chart Script -->
<script>
  const brandLabels = <%- JSON.stringify(brandData.map(item => item.brand)) %>;
  const brandCounts = <%- JSON.stringify(brandData.map(item => item.total)) %>;

  const ctx = document.getElementById('brandChart').getContext('2d');
  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: brandLabels,
      datasets: [{
        label: 'Sneakers Count',
        data: brandCounts,
        backgroundColor: 'rgba(54, 162, 235, 0.7)',
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 1,
        borderRadius: 5
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { display: false }
      },
      scales: {
        y: { beginAtZero: true, ticks: { stepSize: 1 } }
      }
    }
  });
</script>

</body>
</html>
