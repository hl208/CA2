<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <title>User Dashboard - We Are Sneakers</title>
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/shoes">We Are Sneakers</a>
    <div class="d-flex align-items-center text-white">
      <ul class="navbar-nav align-items-center">
        <li class="nav-item me-3">
          <% if (session && session.user) { %>
            <% if (session.user.role === 'admin') { %>
              <a href="/user/admin" class="d-flex align-items-center text-white text-decoration-none">
                <i class="bi bi-person-circle fs-4 me-1"></i> Admin
              </a>
            <% } else { %>
              <a href="/user/userdashboard" class="d-flex align-items-center text-white text-decoration-none">
                <i class="bi bi-person-circle fs-4 me-1"></i> <%= session.user.username %>
              </a>
            <% } %>
          <% } %>
        </li>
        <li class="nav-item">
          <a class="btn btn-outline-light btn-sm mt-1" href="/logout">
            <i class="bi bi-box-arrow-right"></i> Logout
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container py-5">
  <h1 class="mb-4">Welcome, <%= user.username %>!</h1>
  <p>Here is a summary of your sneaker posts by brand:</p>

  <!-- Chart Section -->
  <div class="row mb-5">
    <div class="col-md-auto text-center mx-auto">
      <h3>Sneakers by Brand</h3>
      <canvas id="brandChart" height="400"></canvas>
    </div>
  </div>

  <!-- Upload History Section -->
  <h3 class="mb-4 text-center">Your Upload History</h3>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% if (uploadHistory && uploadHistory.length > 0) { %>
      <% uploadHistory.forEach(shoe => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <% if (shoe.image_path) { %>
              <img src="<%= shoe.image_path %>" class="card-img-top" style="height: 250px; object-fit: cover;">
            <% } else { %>
              <img src="/images/default-shoe.jpg" class="card-img-top" style="height: 250px; object-fit: cover;">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= shoe.model %></h5>
              <p class="card-text">
                Brand: <%= shoe.brand %><br>
                Price: $<%= shoe.price %><br>
                <small class="text-muted">Uploaded on: <%= new Date(shoe.created_at).toLocaleDateString() %></small>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col text-center">
        <p class="text-muted">You haven't uploaded any sneakers yet.</p>
      </div>
    <% } %>
  </div>

  <a href="/shoes" class="btn btn-primary mt-4">Back to Listings</a>
</div>

<script>
  // Prepare brand chart data
  const brandLabels = <%- JSON.stringify(brandData.map(item => item.brand)) %>;
  const brandCounts = <%- JSON.stringify(brandData.map(item => item.total)) %>;

  const ctxBrand = document.getElementById('brandChart').getContext('2d');
  const brandChart = new Chart(ctxBrand, {
    type: 'bar',
    data: {
      labels: brandLabels,
      datasets: [{
        label: 'Sneakers Count',
        data: brandCounts,
        backgroundColor: 'rgba(54, 162, 235, 0.7)',
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 1,
        borderRadius: 5
      }]
    },
    options: {
      responsive: true,
      scales: {
        y: { beginAtZero: true, precision: 0 }
      }
    }
  });
</script>

</body>
</html>
