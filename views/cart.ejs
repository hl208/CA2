<!DOCTYPE html>
<html lang="en">
<head>
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="container py-5">
  <h1 class="mb-4">Your Cart</h1>

  <% if (items.length === 0) { %>
    <div class="alert alert-info">Your cart is empty.</div>
  <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th>Model</th>
          <th>Brand</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
            <td><%= item.model %></td>
            <td><%= item.brand %></td>
            <td>$<%= item.price %></td>
            <td><%= item.qty %></td>
            <td>$<%= item.subtotal %></td>
            <td>
              <form action="/shoes/cart/delete/<%= item.id %>" method="POST" onsubmit="return confirm('Remove this item?');">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <h4>Total: $<%= total %></h4>
  <% } %>

  <a href="/shoes" class="btn btn-primary mt-3">Continue Shopping</a>
</body>
</html>
