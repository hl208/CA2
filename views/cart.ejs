<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>We Are Sneakers</title>
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">ðŸ›’ Your Shopping Cart</h1>

    <% if (!items || items.length === 0) { %>
      <div class="alert alert-info">Your cart is currently empty.</div>
      <a href="/shoes" class="btn btn-primary">Back to Shop</a>
    <% } else { %>
      <table class="table table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>Model</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Subtotal</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
            <tr>
              <td><%= item.model %></td>
              <td><%= item.brand %></td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td><%= item.qty %></td>
              <td>$<%= item.subtotal.toFixed(2) %></td>
              <td>
                <form action="/shoes/cart/delete/<%= item.id %>" method="POST">
                  <button class="btn btn-danger btn-sm" type="submit">Remove</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4" class="text-end">Total:</th>
            <th>$<%= total.toFixed(2) %></th>
            <th></th>
          </tr>
        </tfoot>
      </table>
      <a href="/shoes" class="btn btn-secondary">Continue Shopping</a>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
